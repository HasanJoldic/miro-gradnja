{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div class="container col-xs-9 col-md-6 col-lg-4" id="admin-login-container">

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <fieldset class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="_username"
               value="{{ last_username }}" required="required" />
    </fieldset>

    <fieldset class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control" type="password" id="password" name="_password" required="required" />
    </fieldset>

    <fieldset class="form-check">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </fieldset>

    <fieldset class="form-check">
    <input class="btn btn-primary btn-lg" type="submit" id="_submit" name="_submit"
           value="{{ 'security.login.submit'|trans }}" />
    <a class="pull-right" id="register" name="register" href="/register">
        {{ 'registration.submit'|trans }}
    </fieldset>



</form>
</div>